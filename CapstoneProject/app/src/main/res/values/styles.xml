<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text View -->
    <style name="main_tv_actionBar" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="splash_tv_content">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorGreySoft1</item>
    </style>

    <style name="home_tv_tittle">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorGreyPrimary</item>
    </style>

    <style name="home_tv_subTittle">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorGreySoft1</item>
    </style>

    <style name="profile_tv_tittle">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorGreyPrimary</item>
    </style>

    <style name="profile_tv_subTittle">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreySoft2</item>
    </style>

    <style name="profile_tv_content">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorGreySoft1</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="include_tv_tittle">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreyPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="include_tv_subTittle">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorGreySoft1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="widget_tv_tittle">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhiteSoft</item>
    </style>

    <style name="widget_tv_subTittle">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorWhiteSoft</item>
    </style>


    <!-- Tab Layout -->
    <style name="profile_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/segoeui_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
